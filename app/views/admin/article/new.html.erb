                </div>
              <br><br>
                <div class="text-center col-md-4">
                  <%= label_tag 'title3' %>
                  <%= text_field_tag 'title3', @article.title3, class: "form-control" %>
                </div>
                <div class="text-center">
                  <%= label_tag 'content3' %>
                  <%= text_field_tag 'content3', @article.content3, class: "form-control" %>
                </div>
              <br><br>
                <div class="text-center col-md-4">
                  <%= label_tag 'title4' %>
                  <%= text_field_tag 'title4', @article.title4, class: "form-control" %>
                </div>
                <div class="text-center">
                  <%= label_tag 'content4' %>
                  <%= text_field_tag 'content4', @article.content4, class: "form-control" %>
                </div>
              <br><br>
                <div class="text-center col-md-4">
                  <%= label_tag 'title5' %>
                   <%= text_field_tag 'title5', @article.title5, class: "form-control" %>
                </div>
                <div class="text-center">
                  <%= label_tag 'content5' %>
                  <%= text_field_tag 'content5', @article.content5, class: "form-control" %>
                </div>
              <br><br>
                <div class="text-center col-md-4">
                  <%= label_tag 'title6' %>
                  <%= text_field_tag 'title6', @article.title6, class: "form-control" %>
                </div>
                <div class="text-center">
                  <%= label_tag 'content6' %>
                  <%= text_field_tag 'content6', @article.content6, class: "form-control" %>
                </div>
              <br><br>
                <div class="text-center col-md-4">
                  <%= label_tag 'title7' %>
                  <%= text_field_tag 'title7', @article.title7, class: "form-control" %>
                </div>
                <div class="text-center col-md-4">
                  <%= label_tag 'content7' %>
                  <%= text_field_tag 'content7', @article.content7, class: "form-control" %>
                </div>
		<br><br>
              <center><%= submit_tag "Creer l'article", class:"btn btn-outline-primary" %></center>

            <% end %>

        <h3 class="d-flex justify-content-end"> Article by <%= current_user.first_name %></h3>        



        </div>
      </div>
     </div>
  </div>

</body>

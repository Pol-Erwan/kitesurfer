<body style="background-image: url('/assets/background/admin.jpg')">

  <% if @product.errors.any? %>
  <div class="alert alert-danger" role="alert">
            <p>Nous n'avons pas réussi à modifier l'utilisateur pour la (ou les) raison(s) suivante(s) :</p>
            <ul>
              <% @product.errors.full_messages.each do |message| %>
                <li class="li_errors"><%= message %></li>
              <% end %>
            </ul>
    </div>
      <% end %>
<div class="m-2">
    <%= link_to " ", admin_board_index_path, class:"pull-left btn btn-danger fas fa-arrow-left", style:"font-size:30px" %>
</div>
<br>
        <h2 class="title text-white"> Modifier le Twin-tip <%= @product.name %> n°<%= @product.id %></h2>      
<div class="container card card-body p-5" >
        <h3 class="title text-center"> Infos principales</h3>
  <div class="row">

            <%= form_tag url_for(action: 'update'), method: 'put' do %>
              <div class="row">
                <div class="col-3">
                  <%= label_tag 'modèle' %>
                  <%= text_field_tag 'name', @product.name, class: "form-control" %>
                </div>
                <div class="col-3">
                  <%= label_tag 'Marque' %>
                  <%= text_field_tag 'brand', @product.brand, class: "form-control" %>
                </div>
                <div class="col-3">
                  <%= label_tag 'Domaine' %>
                  <%= text_field_tag 'domain', @product.domain, class: "form-control" %>
                </div>
                <div class="col-3">
                  <%= label_tag 'Categorie' %>
                  <%= text_field_tag 'category', @product.category, class: "form-control" %>
                </div>
                <div class="col-3">
                  <%= label_tag 'favoris' %>
                  <%= text_field_tag 'favorite', @product.favorite, class: "form-control" %>
                </div>
              </div>

        <h3 class="title text-center"> Compétences</h3>
              <div class="row">
                <div class="col-2">
              <%= label_tag 'Contrôle' %>
              <%= text_field_tag 'control', @technic.control, class: "form-control" %>
		</div>
                <div class="col-2">
              <%= label_tag 'Progression' %>
              <%= text_field_tag 'progression', @technic.progression, class: "form-control" %>
		</div>
                <div class="col-2">
              <%= label_tag 'freeride' %>
              <%= text_field_tag 'freeride', @technic.freeride, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'freestyle' %>
              <%= text_field_tag 'freestyle', @technic.freestyle, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'maniability' %>
              <%= text_field_tag 'maniability', @technic.maniability, class: "form-control"%>
		</div>
		</div>

        <h3 class="title text-center"> Caractérisques</h3>
              <div class="row">
                <div class="col-2">
              <%= label_tag 'detail' %>
              <%= text_field_tag 'detail', @option.detail, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'taille disponible' %>
              <%= text_field_tag 'range', @option.range, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'ailerons' %>
              <%= text_field_tag 'fin', @option.fin, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Largeur' %>
              <%= text_field_tag 'width', @option.width, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Stance' %>
              <%= text_field_tag 'stance', @option.stance, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Champs' %>
              <%= text_field_tag 'champs', @option.champs, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Carène' %>
              <%= text_field_tag 'carene', @option.carene, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Flex' %>
              <%= text_field_tag 'flex', @option.flex, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'poids' %>
              <%= text_field_tag 'weigh', @option.weigh, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'taille testé' %>
              <%= text_field_tag 'testsize', @product.testsize, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'prix' %>
              <%= text_field_tag 'price', @product.price, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'millésime' %>
              <%= text_field_tag 'year', @product.year, class: "form-control"%>
		</div>
                <div class="col-6">
              <%= label_tag 'lien youtube' %>
              <%= text_field_tag 'youtube', @product.youtube, class: "form-control"%>
		</div>
                <div class="col-6">
              <%= label_tag 'lien site constructeur' %>
              <%= text_field_tag 'link', @product.link, class: "form-control"%>
		</div>
                <div class="col-12">
              <%= label_tag 'description' %>
              <%= text_field_tag 'description', @product.description, class: "form-control"%>
		</div>
                </div>

              <center><%= submit_tag "Modifier le Twin-tip", class:"m-4 btn btn-outline-primary" %></center>
            <% end %>
        </div>
      </div>
</body>


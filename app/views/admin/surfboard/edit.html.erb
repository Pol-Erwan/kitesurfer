<body style="background-image: url('/assets/background/admin.jpg')">

  <% if @product.errors.any? %>
  <div class="alert alert-danger" role="alert">
            <p>Nous n'avons pas réussi à modifier l'utilisateur pour la (ou les) raison(s) suivante(s) :</p>
            <ul>
              <% @product.errors.full_messages.each do |message| %>
                <li class="li_errors"><%= message %></li>
              <% end %>
            </ul>
    </div>
      <% end %>
<div class="m-2">
    <%= link_to " ", admin_surfboard_index_path, class:"pull-left btn btn-danger fas fa-arrow-left", style:"font-size:30px" %>
</div>
<br>
        <h2 class="title text-white"> Modifier le Surf <%= @product.name %> n°<%= @product.id %></h2>      
<div class="container card card-body p-5" >
        <h3 class="title text-center"> Infos principales</h3>
  <div class="row">

            <%= form_tag url_for(action: 'update'), method: 'put' do %>
              <div class="row">
                <div class="col-3">
                  <%= label_tag 'modèle' %>
                  <%= text_field_tag 'name', @product.name, class: "form-control" %>
                </div>
                <div class="col-3">
                  <%= label_tag 'Marque' %>
                  <%= text_field_tag 'brand', @product.brand, class: "form-control" %>
                </div>
                <div class="col-3">
              <%= label_tag 'Domaine' %>
              <%= select_tag 'domain', raw("<option>Freestyle</option><option>Wave</option>"), class: "form-control" %>
		</div>
                <div class="col-3">
                  <%= label_tag 'favoris' %>
                  <%= text_field_tag 'favorite', @product.favorite, class: "form-control" %>
                </div>
              </div>

        <h3 class="title text-center"> Compétences</h3>
              <div class="row">
                <div class="col-2">
              <h5 class="mt-3 fas fa-exclamation-triangle text-warning"><%= label_tag 'Wave' %>
              <%= select_tag 'wave', raw("<option>1</option><option>2</option><option>3</option>"), class: "form-control" %></h5>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning"> 
              <%= label_tag 'Courbes' %>
              <%= select_tag 'courbes', raw("<option>1</option><option>2</option><option>3</option><option>4</option><option>5</option>"), class: "form-control" %>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning">
              <%= label_tag 'Side-Shore' %>
              <%= select_tag 'sideshore', raw("<option>1</option><option>2</option><option>3</option>"), class: "form-control" %>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning">
              <%= label_tag 'On-Shore' %>
              <%= select_tag 'sideshore', raw("<option>1</option><option>2</option><option>3</option>"), class: "form-control" %>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning">
              <%= label_tag 'freestyle' %>
              <%= select_tag 'freestyle', raw("<option>1</option><option>2</option><option>3</option>"), class: "form-control" %>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning">
              <%= label_tag 'Straps' %>
              <%= select_tag 'strap', raw("<option>1</option><option>2</option><option>3</option>"), class: "form-control" %>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning">
              <%= label_tag 'Strapless' %>
              <%= select_tag 'strapless', raw("<option>1</option><option>2</option><option>3</option>"), class: "form-control" %>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning">
              <%= label_tag 'wind' %>
              <%= select_tag 'wind', raw("<option>1</option><option>2</option><option>3</option><option>4</option><option>5</option>"), class: "form-control" %>
		</div>
                <div class="mt-3 col-2 fas fa-exclamation-triangle text-warning">
              <%= label_tag 'Transition' %>
              <%= select_tag 'transition', raw("<option>1</option><option>2</option><option>3</option><option>4</option><option>5</option>"), class: "form-control" %>
		</div>
	      </div>

        <h3 class="title text-center"> Caractérisques</h3>
              <div class="row">
                <div class="col-2">
              <%= label_tag 'detail' %>
              <%= text_field_tag 'detail', @option.detail, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'taille disponible' %>
              <%= text_field_tag 'range', @option.range, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'ailerons' %>
              <%= text_field_tag 'fin', @option.fin, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Largeur' %>
              <%= text_field_tag 'width', @option.width, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'length' %>
              <%= text_field_tag 'length', @option.length, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Maître-Bau' %>
              <%= text_field_tag 'maitrebau', @option.maitrebau, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Carène' %>
              <%= text_field_tag 'carene', @option.carene, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Epaisseur' %>
              <%= text_field_tag 'thickness', @option.thickness, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Volume' %>
              <%= text_field_tag 'volum', @option.volum, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'Boitier' %>
              <%= text_field_tag 'box', @option.box, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'poids' %>
              <%= text_field_tag 'weigh', @option.weigh, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'taille testé' %>
              <%= text_field_tag 'testsize', @product.testsize, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'prix' %>
              <%= text_field_tag 'price', @product.price, class: "form-control"%>
		</div>
                <div class="col-2">
              <%= label_tag 'millésime' %>
              <%= text_field_tag 'year', @product.year, class: "form-control"%>
		</div>
                <div class="col-6">
              <%= label_tag 'lien youtube' %>
              <%= text_field_tag 'youtube', @product.youtube, class: "form-control"%>
		</div>
                <div class="col-6">
              <%= label_tag 'lien site constructeur' %>
              <%= text_field_tag 'link', @product.link, class: "form-control"%>
		</div>
                <div class="col-12">
              <%= label_tag 'description' %>
              <%= text_field_tag 'description', @product.description, class: "form-control"%>
		</div>
                </div>

              <center><%= submit_tag "Modifier le Surf", class:"m-4 btn btn-outline-primary" %></center>
            <% end %>

  <h2 class="title text-white"> Modifier les photos <%= @product.name %> n°<%= @product.id %></h2>
    <div class="container card card-body p-5" >
      <%= render"layouts/flash" %>

      <section id="picture">
        <h1>Photos</h1>

          <%= form_tag admin_product_picture_index_path(@product), multipart: true do %>
            <h3>Ajouter les photos du caroussel</h3>
              <%if @product.picture.attached?%>
                <% @product.picture.each do |t, index| %>
                  <%= image_tag t, alt: 'kite picture', style:"width:200px" %>
                <% end %>
              <% end %>
            <h6>slide 1</h6><%= file_field_tag :carousel %>
            <h6>slide 2</h6><%= file_field_tag :carousel2 %>
            <h6>slide 3</h6><%= file_field_tag :carousel3 %>
            <h6>slide 4</h6><%= file_field_tag :carousel4 %>
            <h6>slide 5</h6><%= file_field_tag :carousel5 %>
            <h6>slide 6</h6><%= file_field_tag :carousel6 %>
            <h6>slide 7</h6><%= file_field_tag :carousel7 %>


<h3>Ajouter la photo du background</h3>

<%if @product.background.attached?%>
  <%= image_tag @product.background, alt: 'kite picture', style:"width:200px" %>
<% end %>
 <%= file_field_tag :background %>

<h3>Ajouter la photo id card</h3>
<%if @product.idcard.attached?%>
  <%= image_tag @product.idcard, alt: 'kite picture', style:"width:200px" %>
<%end %>
 <%= file_field_tag :idcard %>

<h3>Ajouter la photo profil</h3>
<%if @product.profil.attached?%>
  <%= image_tag @product.profil, alt: 'kite picture', style:"width:200px" %>
<% end %>
 <%= file_field_tag :profil %>

<h3>Ajouter la photo competence</h3>
<%if @product.competence.attached?%>
  <%= image_tag @product.competence, alt: 'kite picture', style:"width:200px" %>
<% end %>
 <%= file_field_tag :competence %>

<h3>Ajouter les photos details</h3>
<%if @product.detail.attached?%>
<% @product.detail.each do |t, index| %>
  <%= image_tag t, alt: 'kite picture', style:"width:200px" %>
<% end %>
<% end %>
            <h6>detail 1</h6><%= file_field_tag :detail %>
            <h6>detail 2</h6><%= file_field_tag :detail2 %>
            <h6>detail 3</h6><%= file_field_tag :detail3 %>

<br>
 <center><%= submit_tag "mettre à jour", class:"btn-sm btn-success" %><center>
<% end %>

<h4>supprimer la dernière photo ? </h4>
      <td><%= link_to "Supprimer picture ", admin_product_picture_path(@product.picture), class:"btn-sm btn-danger", method: :delete %></td>

</section>


<% if @product.category === "kite" %>
<div class="m-2">
    <%= link_to "Aperçu", kite_path(@product.id), class:"pull-left btn btn-primary" %>
</div>
<%end%>

<% if @product.category === "board" %>
<div class="m-2">
    <%= link_to "Aperçu", board_path(@product.id), class:"pull-left btn btn-primary" %>
</div>
<%end%>

<% if @product.category === "surfboard" %>
<div class="m-2">
    <%= link_to "Aperçu", surfboard_path(@product.id), class:"pull-left btn btn-primary" %>
</div>
<%end%>

<% if @product.category === "accessory" %>
<div class="m-2">
    <%= link_to "Aperçu", accessory_path(@product.id), class:"pull-left btn btn-primary" %>
</div>
<%end%>


</div>
<div class="m-2">
    <%= link_to " ", admin_product_index_path, class:"pull-left btn btn-danger fas fa-arrow-left", style:"font-size:30px" %>
</div>

    </div>
        </div>
      </div>
</body>



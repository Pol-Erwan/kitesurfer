<% if current_user.present? %>
  <% if @compare != nil %>
    <% @compare.each do |t, index| %>
      <% if t.user_id === current_user.id %>
        <% @same = 1 %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if @same === nil %>
  <% if current_user.present? %>
      <%= form_tag url_for(action: 'create'), method: 'post' do %>
      <%= text_field_tag 'id', @product.id, type:"hidden" %>
      <%= submit_tag "Ajouter au comparateur", class:"btn btn-success", target:"blank_" %>  <%= @product.id %> / <%= current_user.id %> <%= @same %>
      <% end %>
  <% else %>
    <%= link_to new_user_session_path, :method => 'new' do %>
    <p class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Il faut se connecter">Ajouter au comparateur</p> 
    <% end %>
  <% end %>
<% end %>

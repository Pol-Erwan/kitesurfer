    <% if notice.present? %>
          <div class="d-flex justify-content-end" id="warning_explanation">
            <div class="card alert alert-success alert-dismissible fade show" role="alert" style="width:20%">
              <strong><i class="m-1 fas fa-check"></i><%= notice %></strong>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
	<% end %>

    <% if alert.present? %>
          <div class="d-flex justify-content-end" id="warning_explanation">
            <div class="card alert alert-warning alert-dismissible fade show" role="alert" style="width:20%">
              <strong><i class="m-1 fas fa-exclamation-triangle"></i><%= alert %></strong>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
	<% end %>



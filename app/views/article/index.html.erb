	<% else %>
          <img src="assets/image.jpg" alt="kite image" class="img-rounded img-responsive" style="width:100%">
	<% end %>        
	<div class="card-body">
          <h5 class="card-title text-left"><%= @tests.title3 %></h5>
          <p class="card-text d-inline-block text-truncate" style="max-width: 100px;"><%= @tests.content3 %></p>
        </div>
      </div>

  </div>

</div>




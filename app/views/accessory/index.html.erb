<%= render"layouts/navbartest" %>

<body class="index-page sidebar-collapse">
  <div class="page-header header-filter clear-filter" data-parallax="true" style="background-image: url('./assets/background/accessory.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand">
            <h1>Les Accessoires</h1>
                <a class="carousel-control-prev" href="<%= surfboard_index_path %>" role="button" data-slide="prev">
                  <i class="fas fa-caret-square-left" style="font-size:50px"></i>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="<%= kite_index_path %>" role="button" data-slide="next">
		  <i class="fas fa-caret-square-right" style="font-size:50px"></i>
                  <span class="sr-only">Next</span>
                </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="main main-raised">

  <nav id='nav_bar'>
    <ul class='nav_links d-flex justify-content-center'>
            <li class="active nav-item my-1 mx-5">
            <%= link_to kite_index_path(anchor: "bar"), class:" nav-link" do %>
		<div class="d-flex flex-column">
		<h4 class="text-center">Les barres</h4>
			<i class="d-flex justify-content-center fas fa-arrow-alt-circle-down fa-2x"></i>
		</div>
		<%end%>
            </li>
            <li class="active nav-item my-1 mx-5">
              <%= link_to kite_index_path(anchor: "pads"), class:"nav-link" do %>
		<div class="d-flex flex-column">
		<h4 class="text-center">Les pads / straps</h4>
			<i class="d-flex justify-content-center fas fa-arrow-alt-circle-down fa-2x"></i>
		</div>
		<%end%>
            </li>
            <li class="nav-item my-1 mx-5">
            <%= link_to kite_index_path(anchor: "wetsuit"), class:" nav-link" do %>
		<div class="d-flex flex-column">
		<h4 class="text-center">Les combinaisons</h4>
			<i class="d-flex justify-content-center fas fa-arrow-alt-circle-down fa-2x"></i>
		</div>
		<%end%>
            </li>
            <li class="nav-item my-1 mx-5">
            <%= link_to kite_index_path(anchor: "harness"), class:" nav-link" do %>

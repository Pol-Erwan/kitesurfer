<%= render"layouts/navbartest" %>

<body class="index-page sidebar-collapse">
<%if @article.present? %>
  <%if @article.background.attached? %>
    <div class="page-header header-filter clear-filter" data-parallax="true" style="background-image: url(<%= rails_blob_url(@article.background)%>);">
  <% end %>
  <% else %>
  <div class="page-header" id="header" data-parallax="true" style="background-image: url('/assets/image.jpg');"></div>
<% end %>
    <div class="container">
      <div class="col-md-8 ml-auto mr-auto">
        <div class="brand">
          <h1>Les accessoires</h1>
            <a class="carousel-control-prev" href="<%= foil_index_path %>" role="button" data-slide="prev">
              <i class="fas fa-caret-square-left" style="font-size:50px"></i>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="<%= kite_index_path %>" role="button" data-slide="next">
	      <i class="fas fa-caret-square-right" style="font-size:50px"></i>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="main">

  <nav id="nav_bar">
    <ul class="card d-flex flex-row nav_links d-flex justify-content-center">
            <li class="active nav-item my-1 mx-5">
            <%= link_to accessory_index_path(anchor: "bar"), class:" nav-link" do %>
		<div class="d-flex flex-column">
              <i class="text-center text-warning fas fa-gamepad fa-4x"></i>
		</div>
		<%end%>
            </li>
            <li class="nav-item my-1 mx-5">
              <%= link_to accessory_index_path(anchor: "wetsuit"), class:"nav-link" do %>
		<div class="d-flex flex-column">
                <i class="text-center text-warning fas fa-male fa-4x"></i>
		</div>
		<%end%>
            </li>
            <li class="nav-item my-1 mx-5">
            <%= link_to accessory_index_path(anchor: "presentation"), class:" nav-link" do %>
		<div class="d-flex flex-column">
		<i class="text-center text-warning fas fa-users fa-4x"></i>
		</div>
		<%end%>
            </li> 
            <li class="nav-item my-1 mx-5">
            <%= link_to accessory_index_path(anchor: "harness"), class:" nav-link" do %>
		<div class="d-flex flex-column">
		<i class="text-center text-warning fas fa-hamburger fa-4x"></i>
		</div>
		<%end%>
            </li>
            <li class="nav-item my-1 mx-5">
            <%= link_to accessory_index_path(anchor: "pads"), class:" nav-link" do %>
		<div class="d-flex flex-column">
		<i class="text-center text-warning fas fa-shoe-prints fa-4x"></i>
		</div>
		<%end%>
            </li>     
    </ul>
  </nav>

  <% if @article.present? %> 
    <section id="bar">
    <%if @article.jumbotron.attached? %>
      <div class="jumbotron" style="background-image: url(<%= rails_blob_url(@article.jumbotron.first)%>); background-size: 100%;">
    <% else %>
      <div class="jumbotron" style="background-image: url(/assets/image.jpg); background-size: 100%;">
    <% end %>      
    <div class="container for-about">
      <h1><%= @article.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <div class="mx-3">
        <h2 class="m-5"><%= @article.intro %></h2> 
	<% if @article.image.attached? %>
          <%= image_tag @article.image.first, alt: 'kite image', class:"card img-rounded img-responsive", style:"width:100%" %>
	<% else %>
          <img src="assets/image.jpg" alt="kite image" class="card img-rounded img-responsive" style="width:100%">
	<% end %>
	<p class="card-text m-1 mb-5"><%= @article.content %></p>
	<% if @article.image.attached? %>
          <%= image_tag @article.image.second, alt: 'kite image', class:"card img-rounded img-responsive", style:"width:100%" %>
	<% else %>
          <img src="assets/image.jpg" alt="kite image" class="card img-rounded img-responsive" style="width:100%">
	<% end %>
      </div>
    </div>
    <div class="col-sm-8 p-2">
        <div class="card-body">
          <h3 class="card-title">liste des barres testées</h3>

	    <table class="table table-striped">
	      <thead>
    		<tr>
      		  <th scope="col">Barres</th>
      		  <th scope="col">Modèle</th>
      		  <th scope="col">marque</th>
      		  <th scope="col">descriptif</th>
      		  <th scope="col">prix</th>
    		</tr>
  	      </thead>
 	      <tbody>
		<% @product.each do |t, index| %>
		  <% if t.domain === "bar" %>
    		    <tr>
     		      <th scope="row">
      			<%= link_to accessory_path(t) do %>
			  <% if t.profil.attached? %>
  		  	    <%= image_tag t.profil, alt: 'kite picture', class:"img-raised rounded img-fluid", style:"width:70px" %>
			  <% else %>
		  	    <img src="assets/image.jpg" class="img-raised rounded img-fluid" alt="bar picture" style="width:70px">
			  <%end%>
	      	        <%end%>
		      </th>
      		      <td><h4 class="text-nowrap text-uppercase"><%= t.name %></h4></td>
      		      <td><h4><%= t.brand %></h4></td>
      		      <td><h4 class="d-inline-block text-truncate" style="max-width: 150px;"><%= t.description %></h4></td>
      		      <td><h4><%= t.price %>€</h4></td>
    		    </tr>
	          <% end %>
		<% end %>
	      </tbody>
	    </table>
          </div>

      </div>
    </div>
  </section>


<section id="wetsuit">
    <%if @article.jumbotron.attached? %>
      <div class="jumbotron" style="background-image: url(<%= rails_blob_url(@article.jumbotron.first)%>); background-size: 100%;">
    <% else %>
      <div class="jumbotron" style="background-image: url(/assets/image.jpg); background-size: 100%;">
    <% end %> 
    <div class="container for-about">
      <h1>Les combinaisons</h1>
      </div>
      </div>

      <h2 class="ml-2 fas fa-chevron-circle-right"> Toutes les combis</h2>
      <div class="row">
  	<div class="col-sm-4">
          <div class="card-body">
	    <% if @article.image.attached? %>
              <%= image_tag @article.image.third, alt: 'kite image', class:"card img-rounded img-responsive", style:"width:100%" %>
	    <% else %>
              <img src="assets/image.jpg" alt="kite image" class="card img-rounded img-responsive" style="width:100%">
	    <% end %>
	  </div>
  	</div>
  	<div class="col-sm-8">
          <div class="card-body">
            <h5 class="card-title"><%= @article.title2 %></h5>
            <p class="card-text"><%= @article.content2 %></p>
          </div>
  	</div>
      </div>

      <div class="row">
        <% @products.each do |t, index| %>
          <% if t.domain === "wetsuit" && t.category === "accessory" %>
      	    <div class="card-deck m-3">
              <div class="row mx-3">  
                <div class="card m-3 p-2" style="max-width: 150px;">
	      	  <%= link_to accessory_path(t), class:"nav-link" do %>
		    <% if t.profil.attached? %>
  		      <%= image_tag t.profil, alt: 'kite picture', class:"rounded img-fluid", style:"width:100%" %>
		    <% else %>
		      <img src="assets/image.jpg" class="rounded img-fluid" alt="bar picture" style="width:100%">
		    <%end%>
	          <%end%>
                  <h3 class="card-title"> <%= t.brand %>  </h3><h4> <%= t.name %> <%= t.price %>€</h4>
          	</div>
              </div>
            </div>
          <% else %>
          <%end%>
        <%end%>
      </div>
  </section>

<%= render"layouts/presentation" %>

    <section id="harness">
    <%if @article.jumbotron.attached? %>
      <div class="jumbotron" style="background-image: url(<%= rails_blob_url(@article.jumbotron.fourth)%>); background-size: 100%;">
    <% else %>
      <div class="jumbotron" style="background-image: url(/assets/image.jpg); background-size: 100%;">
    <% end %>      
    <div class="container for-about">
      <h1 class="text-white">Les harnais</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 p-2">
        <div class="card-body">
          <h3 class="card-title">liste des harnais testés</h3>

	    <table class="table table-striped">
	      <thead>
    		<tr>
      		  <th scope="col">Harnais</th>
      		  <th scope="col">Modèle</th>
      		  <th scope="col">Marque</th>
      		  <th scope="col">Taille</th>
      		  <th scope="col">prix</th>
    		</tr>
  	      </thead>
 	      <tbody>
		<% @products.each do |t, index| %>
		  <% if t.domain === "harness" && t.category === "accessory" %>
    		    <tr>
     		      <th scope="row">
      		<%= link_to accessory_path(t), class:"nav-link" do %>
			  <% if t.profil.attached? %>
  		  	    <%= image_tag t.profil, alt: 'kite picture', class:"img-raised rounded img-fluid", style:"width:70px" %>
			  <% else %>
		  	    <img src="assets/image.jpg" class="img-raised rounded img-fluid" alt="bar picture" style="width:70px">
			  <%end%>
	      	        <%end%>
		      </th>
      		      <td><h4 class="text-nowrap text-uppercase"><%= t.name %></h4></td>
      		      <td><h4><%= t.brand %></h4></td>
      		      <td><h4 class="d-inline-block text-truncate" style="max-width: 150px;"><%= @options.find(t.option_id).range %></h4></td>
      		      <td><h4><%= t.price %>€</h4></td>
    		    </tr>
	          <% end %>
		<% end %>
	      </tbody>
	    </table>
          </div>
      </div>

    <div class="col-sm-4 d-flex align-items-center">
      <div class="mx-3">
        <h2 class="m-2"><%= @article.title3 %></h2> 
	<% if @article.image.attached? %>
          <%= image_tag @article.image.fourth, alt: 'kite image', class:"card img-rounded img-responsive", style:"width:100%" %>
	<% else %>
          <img src="assets/image.jpg" alt="kite image" class="card img-rounded img-responsive" style="width:100%">
	<% end %>
	<p class="card-text m-1 mb-5"><%= @article.content3 %></p>
	<% if @article.image.attached? %>
          <%= image_tag @article.background, alt: 'kite image', class:"card img-rounded img-responsive", style:"width:100%" %>
	<% else %>
          <img src="assets/image.jpg" alt="kite image" class="card img-rounded img-responsive" style="width:100%">
	<% end %>
      </div>
    </div>
  </div>

  </section>

<section id="pads">
    <%if @article.jumbotron.attached? %>
      <div class="jumbotron" style="background-image: url(<%= rails_blob_url(@article.jumbotron.first)%>); background-size: 100%;">
    <% else %>
      <div class="jumbotron" style="background-image: url(/assets/image.jpg); background-size: 100%;">
    <% end %>      
    <div class="container for-about">
      <h1 class="text-white">Les pads et straps</h1>
    </div>
  </div>
<div class="row d-flex justify-content-around">
  <div class="col-sm-6 m-1">
      <div class="card-body">
	<% if @article.image.attached? %>
          <%= image_tag @article.image.fifth, alt: 'kite image', class:"card img-rounded img-responsive", style:"width:100%" %>
	<% else %>
          <img src="assets/image.jpg" alt="kite image" class="card img-rounded img-responsive" style="width:100%">
	<% end %>
      </div>
  </div>
  <div class="col-sm-5 m-3">
      <div class="card-body">
        <h5 class="card-title"><%= @article.title4 %></h5>
        <p class="card-text"><%= @article.content4 %></p>
      </div>
  </div>
<div class="row d-flex justify-content-around">
  <div class="col-sm-7 m-2">
    <div class="card bg-light">
      <div class="card-body text-dark">
        <h5 class="card-title text-dark"><%= @article.title5 %></h5>
        <p class="card-text p-2"><%= @article.content5 %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-4 m-2">
      <div class="card-body">
	<% if @article.image.attached? %>
          <%= image_tag @article.image.last, alt: 'kite image', class:"card img-rounded img-responsive", style:"width:100%" %>
	<% else %>
          <img src="assets/image.jpg" alt="kite image" class="card img-rounded img-responsive" style="width:100%">
	<% end %>
      </div>
  </div>
</div>

<table class="table table-striped m-2">
  <thead>
    <tr>
      <th scope="col">Pads / straps</th>
      <th scope="col">Modèle</th>
      <th scope="col">marque</th>
      <th scope="col">details</th>
      <th scope="col">prix</th>
    </tr>
  </thead>
  <tbody>
      <% @products.each do |t, index| %>
      <% if t.domain === "pads" && t.category === "accessory" %>
    <tr>
     <th scope="row">
      		<%= link_to accessory_path(t), class:"nav-link" do %>
			  <% if t.profil.attached? %>
  		  	    <%= image_tag t.profil, alt: 'kite picture', class:"img-raised rounded img-fluid", style:"width:70px" %>
			  <% else %>
		  	    <img src="assets/image.jpg" class="img-raised rounded img-fluid" alt="bar picture" style="width:70px">
			  <%end%>
	      	        <%end%>
</th>
      <td><h4><%= t.name %></h4></td>
      <td><h4><%= t.brand %></h4></td>
      <td><h4><%= @options.find(t.option_id).detail %></h4></td>
      <td><h4><%= t.price %>€</h4></td>
    </tr>
<% end %>
<% end %>
  </tbody>
</table>
 </div>
</section>
  <%end %>
        <div class="card-body">
          <h3 class="card-title">liste accessoires années précédentes</h3>

	    <table class="table table-striped">
	      <thead>
    		<tr>
      		  <th scope="col">Accessoires</th>

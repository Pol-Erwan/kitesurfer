		<h4 class="text-center">Les harnais</h4>
			<i class="d-flex justify-content-center fas fa-arrow-alt-circle-down fa-2x"></i>
		</div>
		<%end%>
            </li>
            <li class="nav-item my-1 mx-5">
            <%= link_to kite_index_path(anchor: "presentation"), class:" nav-link" do %>
		<div class="d-flex flex-column">
		<h4 class="text-center">Equipe Test</h4>
			<i class="d-flex justify-content-center fas fa-arrow-alt-circle-down fa-2x"></i>
		</div>
		<%end%>
            </li>      
    </ul>
  </nav>


  <section id="bar">
  <br><br><br>
    <div class="jumbotron" style="background-image: url(/assets/introtest3.jpg); background-size: 100%;">
      <div class="container for-about">
      <h1>Barres</h1>
      </div>
    </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Barres</th>
      <th scope="col">Modèle</th>
      <th scope="col">marque</th>
      <th scope="col">taille</th>
      <th scope="col">prix</th>
    </tr>
  </thead>
  <tbody>
      <% @products.each do |t, index| %>
      <% if t.domain === "bar" && t.category === "accessory" %>
    <tr>
     <th scope="row">
	    <img src="assets/testaccessory/bar2.png" class="img-raised rounded img-fluid" alt="..." style="width:70px"></a>
</th>
      <td><h3><%= t.name %></h3></td>
      <td><%= t.brand %></td>
      <td><%= @options.find(t.option_id).range %></td>
      <td><%= t.price %>€</td>
      <td><a href="<%= accessory_path(t) %>" class="scrollup btn btn-success">Voir</a>
    </tr>
<% end %>
<% end %>
  </tbody>
</table>


    <h2 class="ml-2 fas fa-chevron-circle-right"> Toutes les barres</h2>
    <div class="row">
      <% @products.each do |t, index| %>
      <% if t.domain === "bar" && t.category === "accessory" %>
      <div class="card-deck m-3">
        <div class="row mx-3">  
          <div class="card m-3 p-2" style="max-width: 100px;">
            <a href="<%= accessory_path(t) %>">
	    <img src="assets/testaccessory/bar.png" class="img-raised rounded img-fluid" alt="..."></a>
            <h3 class="card-title"> <%= t.brand %>  </h3><h4> <%= t.name %></h4>
          </div>
        </div>
      </div>
      <% else %>
      <%end%>
      <%end%>
    </div>
    <a href="#navtest" class="m-3 scrollup d-flex justify-content-end align-items-end"><i class="btn-sm btn-primary fa fa-caret-square-up"></i></a>

  </section>

